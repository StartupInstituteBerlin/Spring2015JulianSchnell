<!DOCTYPE html>
<html>
<head>
  <title>RestaurantApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'shared/navigation' %>

<div id="main-container" class="container">
  <div class="row">
    <div class="col-xs-12">
      <% if notice %><div class="alert alert-info"><%= notice %></div><% end %>
      <% if notice %><div class="alert alert-warning"><%= alert %></div><% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-1">
    <!-- left container -->
    </div>
    <div class="col-xs-6">
      <%= yield %>
    </div>
    <div class="col-xs-5">
      <!-- right container -->
    </div>
  </div>
</div>

</body>
</html>
