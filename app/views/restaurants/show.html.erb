<table>
  <tr>
    <td><strong><%= @restaurant.name %></strong></td>
  </tr>
  <tr>
    <td><%= link_to 'Make a reservation', new_reservation_for_restaurant_path(@restaurant) %></td>
  </tr>
  <tr>
    <td><strong>Description:</strong></td>
    <td><%= @restaurant.description %></td>
  </tr>
  <tr>
    <td><strong>Address:</strong></td>
    <td><%= @restaurant.full_address %></td>
  </tr>
  <tr>
    <td><strong>Phone:</strong></td>
    <td><%= @restaurant.phone %></td>
  </tr>
</table>

<% if current_user && !@has_rating %>
<div id="ratings">
  <%= link_to "", rate_restaurant_path(@restaurant, 1), class: "rating_btn glyphicon glyphicon-star" %>
  <%= link_to "", rate_restaurant_path(@restaurant, 2), class: "rating_btn glyphicon glyphicon-star" %>
  <%= link_to "", rate_restaurant_path(@restaurant, 3), class: "rating_btn glyphicon glyphicon-star" %>
  <%= link_to "", rate_restaurant_path(@restaurant, 4), class: "rating_btn glyphicon glyphicon-star" %>
  <%= link_to "", rate_restaurant_path(@restaurant, 5), class: "rating_btn glyphicon glyphicon-star" %>
</div>
<% end %>
<% if @has_rating %>
<div>
  <h5>Restaurant's rating: <%= @avg_rating %></h5>
</div>
<% end %>

<div id="map">
  <img src="https://maps.googleapis.com/maps/api/staticmap?size=240x240&markers=icon:http://chart.apis.google.com/chart?chst=d_map_pin_icon%26chld=restaurant%257C996600%7C224<%= @restaurant.full_address %>">
</div>
<%= link_to 'Back', restaurants_path %>
<%= link_to 'Edit', edit_restaurant_path(@restaurant) %>
